@page "/"
@layout LoginLayout

@inject HttpClient httpClient
@using PoderFinanceiro.Client.Services
@using PoderFinanceiro.Shared
@using Microsoft.AspNetCore.Components.Authorization
@using PoderFinanceiro.Shared.Models;
@inject AuthenticationStateProvider authenticationProvider
@inject NavigationManager navManager

<div class="row mt-5">

    <div class="col-lg-4 offset-lg-4 border">

        <div class="mb-3 text-center">
            <h3>LOGIN</h3>
        </div>

        <div class="mb-3">
            <label>Login</label>
            <input @bind="login.Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Senha</label>
            <input @bind="login.Password" class="form-control" />
        </div>

        <div class="mb-3">
            <button @onclick="StartSession" class="btn btn-primary">Login</button>
        </div>

    </div>

</div>

@code {
    private LoginDTO login = new LoginDTO();

    private async Task StartSession()
    {
        var loginResponse = await httpClient.PostAsJsonAsync<LoginDTO>("/api/User/Login", login);

        if(loginResponse.IsSuccessStatusCode)
        {
            var session = await loginResponse.Content.ReadFromJsonAsync<SessionDTO>();
            var authenticationService = (AuthenticationService)authenticationProvider;
            await authenticationService.UpdateAuthenticationState(session);

            navManager.NavigateTo("/Index");

        }

    }

}
